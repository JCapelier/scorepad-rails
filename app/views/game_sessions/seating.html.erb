<div class="w-full max-w-md mx-auto px-4 py-8">
  <div class="mb-8">
    <h1 class="font-bold text-xl text-center"><%= @session.game.title %></h1>
  </div>

  <div data-controller="autocomplete">
    <%= simple_form_for :session, url: assign_seats_game_session_path(@session), method: :post do |f| %>
      <% @session.number_of_players.times do %>
        <%= f.fields_for :session_players do |sp_form| %>
          <%= sp_form.input :username,
              input_html: { data: { autocomplete_target: "input", action: "keyup->autocomplete#search"} },
              class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-purple-500 focus:border-purple-500" %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
