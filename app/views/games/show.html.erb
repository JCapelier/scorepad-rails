<div class="w-full max-w-md mx-auto px-4 py-8">
  <div class="mb-8">
    <h1 class="font-bold text-xl text-center"><%= @game.title %></h1>
  </div>

<button class="btn bg-purple-600 hover:bg-purple-700 text-white font-semibold" onclick="my_modal_2.showModal()">
  New session
</button>

<dialog id="my_modal_2" class="modal" data-controller="session-form" data-max-players="<%= @game.max_players%>" data-min-players="<%= @game.min_players%>">
  <div class="modal-box bg-white rounded-lg shadow-md max-w-md mx-auto">
    <h2 class="text-2xl font-bold text-purple-700 mb-6 text-center">Start a New Game Session</h2>

    <%= simple_form_for @game_session do |f| %>
      <%= f.hidden_field :game_id, value: @game.id %>

      <div class="space-y-5" data >
        <div>
          <%= f.label :location, "Where are you playing?", class: "block text-sm font-medium text-gray-800 mb-1" %>
          <%= f.input_field :location,
              class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-purple-500 focus:border-purple-500" %>
        </div>

        <div>
          <%= f.label :number_of_players, "Number of players", class: "block text-sm font-medium text-gray-800 mb-1" %>
          <%= f.select :number_of_players, (@game.min_players..@game.max_players),
                { prompt: "Select number of players" },
                class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-purple-500 focus:border-purple-500" %>
        </div>
        
        <div class="text-center">
          <%= f.button :submit, "Seat the players",
              class: "bg-yellow-300 hover:bg-yellow-400 text-purple-900 font-semibold px-4 py-2 rounded-md" %>
        </div>
      </div>
    <% end %>
  </div>
</dialog>

</div>
