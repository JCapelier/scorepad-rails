<div class="w-full max-w-md mx-auto px-4 py-8">
  <div class="mb-8">
    <h1 class="font-bold text-xl text-center"><%= @game.title %></h1>
  </div>

  <div class="flex flex-col items-center justify-center mb-8">
    <%= link_to "New session", new_game_session_path(game_id: @game.id), class: "btn btn-lg btn-primary w-64 mb-4 text-xl" %>
  </div>

  <%= render 'games/active_sessions', active_sessions: @game.game_sessions.where(status: 'active') %>
</div>
