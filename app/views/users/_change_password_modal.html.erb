<!-- Change Password Modal -->
<dialog id="modal-password" class="modal">
  <div class="modal-box">
    <form method="dialog">
      <button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2">âœ•</button>
    </form>
    <h3 class="font-bold text-lg mb-4">Change Password</h3>
    <%= simple_form_for(current_user, url: user_path(current_user), html: {id: "password_form_#{current_user.id}" }, method: :patch) do |f| %>
      <div class="mb-4">
        <%= f.input :current_password, as: :password, input_html: { class: 'input input-bordered w-full', placeholder: 'Current password' }, label: false %>
      </div>
      <div class="mb-4">
        <%= f.input :password, as: :password, input_html: { class: 'input input-bordered w-full', placeholder: 'New password' }, label: false %>
      </div>
      <div class="mb-4">
        <%= f.input :password_confirmation, as: :password, input_html: { class: 'input input-bordered w-full', placeholder: 'Confirm new password' }, label: false %>
      </div>
      <div class="flex justify-end gap-2">
        <button type="button" class="btn btn-sm" onclick="document.getElementById('modal-password').close()">Cancel</button>
        <%= f.button :submit, 'Save', class: 'btn btn-sm btn-primary' %>
      </div>
    <% end %>
  </div>
</dialog>
