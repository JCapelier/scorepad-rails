<!-- Change Avatar Modal -->
<dialog id="modal-avatar" class="modal">
  <div class="modal-box">
    <form method="dialog">
      <button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2">âœ•</button>
    </form>
    <h3 class="font-bold text-lg mb-4">Change Avatar</h3>
    <%= simple_form_for(current_user, url: user_path(current_user), html: {id: "avatar_form_#{current_user.id}", multipart: true}, method: :patch) do |f| %>
      <div class="mb-4">
        <%= f.input :avatar, as: :file, input_html: { accept: 'image/*', class: 'file-input file-input-bordered w-full' }, label: false %>
      </div>
      <div class="flex justify-end gap-2">
        <button type="button" class="btn btn-sm" onclick="document.getElementById('modal-avatar').close()">Cancel</button>
        <%= f.button :submit, 'Save', class: 'btn btn-sm btn-primary' %>
      </div>
    <% end %>
  </div>
</dialog>
