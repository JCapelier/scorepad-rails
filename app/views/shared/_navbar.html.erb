<div class="navbar navbar-yellow">
  <div class="flex-1">
    <span class="navbar-title">Scorepad</span>
  </div>
  <div class="flex-none">
    <% if current_user %>
      <div class="flex items-center gap-2">
        <% if current_user.avatar.attached? %>
          <%= image_tag current_user.avatar.variant(resize_to_fill: [128, 128]).processed,
                        class: "rounded-full w-10 h-10 object-cover" %>
        <% else %>
          <%= image_tag "default-avatar.jpg", class: "rounded-full w-10 h-10 object-cover" %>
        <% end %>
        <span class="navbar-username"><%= current_user.username.presence || current_user.email %></span>
      </div>
    <% else %>
      <div class="flex items-center gap-2">
        <%= link_to "Log in", new_user_session_path, class: "btn btn-sm btn-outline" %>
        <%= link_to "Sign up", new_user_registration_path, class: "text-sm underline navbar-username" %>
      </div>
    <% end %>
  </div>
</div>
