<div class="w-full max-w-md mx-auto px-4 py-8">
  <h2 class="text-2xl font-bold mb-6 text-center">Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs space-y-4">
      <div>
        <%= f.label :email, class: "block text-sm font-medium mb-1" %>
        <%= f.input_field :email, required: true,
                          class: "w-full px-3 py-2 border border-gray-300 rounded-md",
                          autocomplete: "email" %>
      </div>

      <div>
        <%= f.label :password, class: "block text-sm font-medium mb-1" %>
        <%= f.input_field :password, required: true,
                          class: "w-full px-3 py-2 border border-gray-300 rounded-md",
                          autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center space-x-2">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "text-sm font-medium" %>
        </div>
      <% end %>
    </div>

    <div class="form-actions mt-6 text-center">
      <%= f.button :submit, "Log in", class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md" %>
    </div>
  <% end %>

  <div class="mt-4 text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
