<div class="w-full max-w-md mx-auto px-4 py-8">
  <h2 class="text-2xl font-bold mb-6 text-center">Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>
    <div class="form-inputs space-y-4">

      <%= f.input :first_name, required: true, input_html: { class: "w-full px-3 py-2 border border-gray-300 rounded-md" } %>
      <%= f.input :last_name, required: true, input_html: { class: "w-full px-3 py-2 border border-gray-300 rounded-md" } %>
      <%= f.input :username, required: true, input_html: { class: "w-full px-3 py-2 border border-gray-300 rounded-md" } %>
      <%= f.input :email, required: true, input_html: { autocomplete: "email", class: "w-full px-3 py-2 border border-gray-300 rounded-md" } %>
      <%= f.input :password, required: true, input_html: { autocomplete: "new-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md" } %>
      <%= f.input :password_confirmation, required: true, input_html: { class: "w-full px-3 py-2 border border-gray-300 rounded-md" } %>

      <div>
        <%= f.label :avatar, "Profile Picture", class: "block text-sm font-medium mb-1" %>
        <%= f.file_field :avatar, class: "w-full" %>
      </div>

    </div>

    <div class="form-actions mt-6 text-center">
      <%= f.button :submit, "Sign up", class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md" %>
    </div>
  <% end %>

  <div class="mt-4 text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
